{
  "name": "github-api",
  "version": "1.0.0",
  "description": "A promise based JavaScript interface for the GitHub API",
  "main": "src/GitHub.js",
  "scripts": {
    "build": "gulp build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AshleyWright/GitHub-API.git"
  },
  "keywords": [
    "JavaScript",
    "promise",
    "API",
    "GitHub"
  ],
  "author": "AshleyWright",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AshleyWright/GitHub-API/issues"
  },
  "homepage": "https://github.com/AshleyWright/GitHub-API#readme",
  "devDependencies": {
    "babel-core": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.5",
    "babel-plugin-syntax-exponentiation-operator": "^6.13.0",
    "babel-plugin-transform-class-properties": "^6.11.5",
    "babel-plugin-transform-es2015-modules-umd": "^6.12.0",
    "babel-plugin-transform-function-bind": "^6.8.0",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-es2015": "^6.14.0",
    "eslint": "^3.4.0",
    "gulp": "^3.9.1",
    "webpack": "^1.13.2",
    "webpack-stream": "^3.2.0",
    "yargs": "^5.0.0"
  },
  "eslintConfig": {
    "env": {
      "es6": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      }
    },
    "extends": "eslint:recommended",
    "rules": {
      "indent": [
        2,
        "tab"
      ],
      "brace-style": [
        2,
        "1tbs"
      ],
      "comma-style": [
        2,
        "last"
      ],
      "default-case": 2,
      "func-style": [
        2,
        "declaration"
      ],
      "guard-for-in": 2,
      "no-console": 0,
      "no-floating-decimal": 2,
      "no-mixed-spaces-and-tabs": [
        2,
        "smart-tabs"
      ],
      "no-nested-ternary": 2,
      "no-undefined": 2,
      "quotes": [
        2,
        "single"
      ],
      "radix": 2,
      "keyword-spacing": [
        2
      ],
      "space-before-blocks": 2,
      "spaced-comment": [
        2,
        "always",
        {
          "exceptions": [
            "-"
          ]
        }
      ],
      "strict": [
        2,
        "global"
      ],
      "valid-jsdoc": [
        2,
        {
          "prefer": {
            "return": "returns"
          }
        }
      ],
      "wrap-iife": [
        2,
        "inside"
      ]
    }
  }
}
